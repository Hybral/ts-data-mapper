{
  "name": "ts-model-serializer",
  "version": "1.2.0",
  "description": "Mapping of JSON response to a custom model class",
  "keywords": ["typescript", "json-response", "serializer", "model-serializer"],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hybral/ts-model-serializer.git"
  },
  "bugs": {
    "url": "https://github.com/Hybral/ts-model-serializer/issues"
  },
  "homepage": "https://github.com/Hybral/ts-model-serializer#readme",
  "files": [
    "dist"
  ],
  "author": "Jonas <jonas.ostlund@outlook.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "clean": "rm -rf ./coverage",
    "test": "jest",
    "test:prod": "npm run test -- --coverage --no-cache",
    "test:a": "istanbul cover _mocha --compilers ts:ts-node/register \"./test/**/*.spec.ts\" --report lcovonly -- -R spec",
    "report": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "coveralls": "^3.0.0",
    "jest": "^22.4.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "typescript": "^2.6.2"
  }
}
