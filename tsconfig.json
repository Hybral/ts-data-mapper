{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
